@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="p-4 p-md-5 mb-4 rounded-3 bg-light border">
    <div class="container-fluid py-2">
        <h1 class="display-6 fw-semibold">Dependency Visualizer</h1>
        <p class="col-md-10 fs-5">Define architecture nodes, map dependencies, and preview the graph using Cytoscape in ASP.NET Razor Pages (.NET 9).</p>
        <div class="d-flex gap-2 flex-wrap">
            <a class="btn btn-primary" asp-page="/Nodes/Index">1. Manage Nodes</a>
            <a class="btn btn-outline-primary" asp-page="/Relationships/Index">2. Manage Relationships</a>
            <a class="btn btn-outline-dark" asp-page="/Preview/Index">3. Preview Graph</a>
        </div>
    </div>
</div>
