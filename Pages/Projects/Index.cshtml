@page
@model dependencies_visualizer.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>
<p class="text-muted">Maintainers can manage project details and members. Contributors can manage nodes and relationships.</p>

<div class="row g-4">
    <div class="col-lg-5">
        <h2 class="h4">Create Project</h2>
        <form method="post" asp-page-handler="CreateProject" class="card p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="CreateInput.Name" class="form-label"></label>
                <input asp-for="CreateInput.Name" class="form-control" />
                <span asp-validation-for="CreateInput.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CreateInput.Description" class="form-label"></label>
                <textarea asp-for="CreateInput.Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="CreateInput.Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create Project</button>
        </form>
        <div class="small text-muted mt-2">
            Suggested details: scope, owning team, environment, key external dependencies.
        </div>
    </div>

    <div class="col-lg-7">
        <h2 class="h4">My Projects</h2>
        @if (!Model.Projects.Any())
        {
            <p class="text-muted">No projects found. Create your first project.</p>
        }
        else
        {
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Description</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Projects)
                {
                    var project = item.Project;
                    <tr>
                        <td>@project.Name</td>
                        <td>@item.Role</td>
                        <td>@project.Description</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-primary" asp-page="/Nodes/Index" asp-route-projectId="@project.Id" title="Nodes" aria-label="Nodes">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M2 2h5v5H2V2zm7 0h5v5H9V2zM2 9h5v5H2V9zm7 0h5v5H9V9z"/></svg>
                            </a>
                            <a class="btn btn-sm btn-outline-primary" asp-page="/Relationships/Index" asp-route-projectId="@project.Id" title="Relationships" aria-label="Relationships">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M2 5h5V3l4 3-4 3V7H2V5zm12 6H9v2l-4-3 4-3v2h5v2z"/></svg>
                            </a>
                            <a class="btn btn-sm btn-outline-dark" asp-page="/Preview/Index" asp-route-projectId="@project.Id" title="Preview" aria-label="Preview">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 3C4.5 3 1.6 5.2.3 8c1.3 2.8 4.2 5 7.7 5s6.4-2.2 7.7-5C14.4 5.2 11.5 3 8 3zm0 8a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/></svg>
                            </a>
                            <a class="btn btn-sm btn-outline-dark" asp-page="/Projects/Audit" asp-route-projectId="@project.Id" title="Audit" aria-label="Audit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 3a.5.5 0 0 1 .5.5V8l3 1.8-.5.8L7.5 8.5V3.5A.5.5 0 0 1 8 3z"/><path d="M8 1a7 7 0 1 0 7 7A7 7 0 0 0 8 1zm0 13A6 6 0 1 1 8 2a6 6 0 0 1 0 12z"/></svg>
                            </a>
                            <a class="btn btn-sm btn-outline-secondary" asp-page="/Projects/Index" asp-route-manageProjectId="@project.Id" title="Open" aria-label="Open">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M10.5 2a.5.5 0 0 1 0 1H4v9h9V5.5a.5.5 0 0 1 1 0V12A1 1 0 0 1 13 13H4a1 1 0 0 1-1-1V3a1 1 0 0 1 1-1h6.5z"/><path d="M15 1.5V5a.5.5 0 0 1-1 0V2.7l-5.1 5.1a.5.5 0 0 1-.8-.6l.1-.1L13.3 2H11a.5.5 0 0 1 0-1h3.5a.5.5 0 0 1 .5.5z"/></svg>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>

@if (Model.ManagedProject is not null)
{
    <hr class="my-4" />
    <h2 class="h4">Project: @Model.ManagedProject.Name</h2>
    <p class="text-muted mb-3">Owner: @Model.ManagedProject.OwnerUsername</p>

    @if (!Model.CanManageSelectedProject)
    {
        <p class="text-muted">You are a contributor for this project. Project settings and membership are maintainer-only.</p>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-6">
                <h3 class="h5">Edit Project Details</h3>
                <form method="post" asp-page-handler="UpdateProject" class="card p-3">
                    <input type="hidden" asp-for="UpdateInput.ProjectId" />
                    <div class="mb-3">
                        <label asp-for="UpdateInput.Name" class="form-label"></label>
                        <input asp-for="UpdateInput.Name" class="form-control" />
                        <span asp-validation-for="UpdateInput.Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateInput.Description" class="form-label"></label>
                        <textarea asp-for="UpdateInput.Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="UpdateInput.Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save Details</button>
                </form>
            </div>

            <div class="col-lg-6">
                <h3 class="h5">Add Member</h3>
                <form method="post" asp-page-handler="AddMember" class="card p-3 mb-3">
                    <input type="hidden" asp-for="MemberInput.ProjectId" />
                    <div class="mb-3">
                        <label asp-for="MemberInput.Username" class="form-label"></label>
                        <select asp-for="MemberInput.Username" asp-items="Model.MemberUserOptions" class="form-select">
                            <option value="">Select user</option>
                        </select>
                        <span asp-validation-for="MemberInput.Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MemberInput.Role" class="form-label"></label>
                        <select asp-for="MemberInput.Role" class="form-select">
                            <option value="Maintainer">Maintainer</option>
                            <option value="Contributor">Contributor</option>
                        </select>
                        <span asp-validation-for="MemberInput.Role" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Member</button>
                </form>

                <h3 class="h5 text-danger">Delete Project</h3>
                <form method="post" asp-page-handler="DeleteProject" class="card p-3 border-danger-subtle" onsubmit="return confirm('Delete this project and all related data?');">
                    <input type="hidden" asp-for="DeleteInput.ProjectId" />
                    <p class="small text-muted mb-2">This deletes all nodes, relationships, and saved layout positions in this project.</p>
                    <button type="submit" class="btn btn-outline-danger">Delete Project</button>
                </form>
            </div>
        </div>
    }

    <h3 class="h5 mt-4">Members</h3>
    @if (!Model.Members.Any())
    {
        <p class="text-muted">No members found.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td>@member.Username</td>
                    <td>@member.Role</td>
                </tr>
            }
            </tbody>
        </table>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
