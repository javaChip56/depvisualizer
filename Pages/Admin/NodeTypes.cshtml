@page
@model dependencies_visualizer.Pages.Admin.NodeTypesModel
@{
    ViewData["Title"] = "Node Types";
}

<h1>Manage Node Types</h1>
<p class="text-muted">Create or update a node type, assign a Cytoscape shape, and set it as regular or compound (grouping).</p>

<div class="row g-4">
    <div class="col-lg-5">
        <h2 class="h4">@(Model.IsEditMode ? "Edit Node Type" : "Add / Update Node Type")</h2>
        <form method="post" asp-page-handler="Save" class="card p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label"></label>
                <input asp-for="Input.Name" class="form-control" readonly="@Model.IsEditMode" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Shape" class="form-label"></label>
                <select asp-for="Input.Shape" class="form-select" asp-items="Model.ShapeOptions" data-shape-picker="true"></select>
                <span asp-validation-for="Input.Shape" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Kind" class="form-label"></label>
                <select asp-for="Input.Kind" class="form-select">
                    <option value="Regular">Regular</option>
                    <option value="Compound">Compound</option>
                </select>
                <span asp-validation-for="Input.Kind" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Node Type</button>
                @if (Model.IsEditMode)
                {
                    <a class="btn btn-outline-secondary" asp-page="/Admin/NodeTypes">Cancel</a>
                }
            </div>
        </form>
    </div>

    <div class="col-lg-7">
        <h2 class="h4">Current Node Types</h2>
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Shape</th>
                    <th>Kind</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var nodeType in Model.NodeTypes)
            {
                <tr>
                    <td>@nodeType.Name</td>
                    <td>@nodeType.Shape</td>
                    <td>@nodeType.Kind</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-page="/Admin/NodeTypes" asp-route-editName="@nodeType.Name" title="Edit" aria-label="Edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M12.146.854a.5.5 0 0 1 .708 0l2.292 2.292a.5.5 0 0 1 0 .708l-9.5 9.5L3 14l.646-2.646 9.5-9.5zM11.207 2 4 9.207V10h.793L12 2.793 11.207 2z"/></svg>
                        </a>
                        <form method="post" asp-page-handler="Delete" class="d-inline" onsubmit="return confirm('Delete this node type?');">
                            <input type="hidden" name="DeleteInput.Name" value="@nodeType.Name" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete" aria-label="Delete">
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M5.5 5.5a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5z"/><path d="M14 3.5a1 1 0 0 1-1 1H3a1 1 0 1 1 0-2h2.5l.5-.5h4l.5.5H13a1 1 0 0 1 1 1zM4.118 5 4.5 13.5A1.5 1.5 0 0 0 6 15h4a1.5 1.5 0 0 0 1.5-1.5L11.882 5H4.118z"/></svg>
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <p class="small text-muted">Deleting a node type is blocked while it is used by any node.</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
