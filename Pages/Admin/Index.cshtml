@page
@model dependencies_visualizer.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<h1>User Administration</h1>
<p>
    <a class="btn btn-outline-primary" asp-page="/Admin/NodeTypes">Manage Node Types</a>
</p>

<div class="row g-4">
    <div class="col-lg-5">
        <h2 class="h4">Create User</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.Username" class="form-label"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.DefaultPassword" class="form-label"></label>
                <input asp-for="Input.DefaultPassword" class="form-control" />
                <span asp-validation-for="Input.DefaultPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Input.IsAdmin" class="form-check-input" />
                <label asp-for="Input.IsAdmin" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary">Create user</button>
        </form>
    </div>
    <div class="col-lg-7">
        <h2 class="h4">Current Users</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Must Change Password</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@(user.IsAdmin ? "Admin" : "User")</td>
                    <td>@(user.MustChangePassword ? "Yes" : "No")</td>
                    <td>@(user.IsSuspended ? "Suspended" : "Active")</td>
                    <td class="text-end">
                        <form method="post" asp-page-handler="ToggleSuspension" class="d-inline" onsubmit="return confirm('@(user.IsSuspended ? "Unsuspend this user?" : "Suspend this user?")');">
                            <input type="hidden" name="ToggleInput.Username" value="@user.Username" />
                            <input type="hidden" name="ToggleInput.Suspend" value="@(user.IsSuspended ? "false" : "true")" />
                            <button type="submit" class="btn btn-sm @(user.IsSuspended ? "btn-outline-success" : "btn-outline-warning")" title="@(user.IsSuspended ? "Unsuspend" : "Suspend")" aria-label="@(user.IsSuspended ? "Unsuspend" : "Suspend")">
                                @if (user.IsSuspended)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 1a7 7 0 1 0 7 7A7 7 0 0 0 8 1zm0 13A6 6 0 1 1 8 2a6 6 0 0 1 0 12z"/><path d="M11.03 5.97a.75.75 0 0 1 0 1.06L7.06 11a.75.75 0 0 1-1.06 0L4.97 9.97a.75.75 0 0 1 1.06-1.06l.5.5 3.44-3.44a.75.75 0 0 1 1.06 0z"/></svg>
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true"><path d="M8 1a7 7 0 1 0 7 7A7 7 0 0 0 8 1zm0 13A6 6 0 1 1 8 2a6 6 0 0 1 0 12z"/><path d="M4.5 8a.75.75 0 0 1 .75-.75h5.5a.75.75 0 0 1 0 1.5h-5.5A.75.75 0 0 1 4.5 8z"/></svg>
                                }
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
